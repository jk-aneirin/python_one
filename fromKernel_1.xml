<domain type='kvm'>
<name>rub</name>
<memory unit='KiB'>4194304</memory>
<vcpu>1</vcpu>
<os>
<type arch='x86_64' machine='pc'>hvm</type>
<kernel>/home/xuliang/vmlinuz</kernel>
<initrd>/home/xuliang/initrd.img</initrd>
<cmdline>method=http://mirrors.163.com/centos/6.7/os/x86_64/ console=ttyS0 console=tty</cmdline>
</os>
<clock offset='utc'/>
<on_poweroff>destroy</on_poweroff>
<on_reboot>destroy</on_reboot>
<on_crash>destroy</on_crash>
<devices>
<emulator>/usr/libexec/qemu-kvm</emulator>
<disk type='file' device='disk'>
<source file='/opt/vm-images/rub2.img'/>
<driver name='qemu' type='raw'/>
<target dev='hda'/>
</disk>

<interface type='bridge'>
<mac address='00:16:3e:45:be:d7'/>
<source bridge='br1'/>
</interface>
<input type='mouse' bus='ps2'/>
<graphics type='vnc' port='-1' listen='127.0.0.1'/>
</devices>
</domain>
